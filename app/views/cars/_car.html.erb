<div id="<%= dom_id car %>">
  
  
  <!-- Actual cars row -->
          <div class="row data-row row-border">
              <div class="col-2 data-column">
                  <%= link_to image_tag(car.image, class: "img-thumbnail"), "#", data: {toggle: 'modal', target: '#Car'+car.id.to_s } %>
              </div>
              <div class="col-2 data-column">
                <%= link_to image_tag("placeholder.jpeg", class: "img-thumbnail"), "/users/"+car.user.id.to_s %>
              </div>
              <div class="col-4 data-column align-middle">
                   <h2><%= car.brand %> <%= car.model %></h2>
              </div>
              <div class="col-3 data-column align-middle">
                  <h2><%= car.starting_price %>$</h2>
              </div>
              <div class="col-1 data-column">
                <%= link_to "Bid", car, class: "btn btn-success btn-data-row" %>
              </div>
          </div>

          <!-- Modal -->
          <div id="Car<%= car.id %>" class="modal fade" tabindex="-1" role="dialog">
              <div class="modal-dialog modal-width-fix">
                <div class="modal-content">
                    <div class="modal-body">
                        <%= image_tag car.image, class: "img-fluid" %>
                    </div>
                </div>
              </div>
          </div>

</div>
