<div id="<%= dom_id user %>">
  
	<div class="text-center">
		<b><h1><%= user.name %>'s Cars</h1></b>
		<!-- seed miatt -->
		<% if user.avatar.attached? %>
			<%= image_tag url_for(user.avatar), class: "user_carpage_profile-img" %>
		<% else %>
			<%= image_tag user.image, class: "user_carpage_profile-img" %>
		<% end %>
		
	</div>
	
	<div class="table-responsive"> 
      <div class="container container-border text-center">
          
          <!-- Top row -->
          <div class="row top-row row-border">
              	<div class="col-2">
            		<h2>Image</h2>
          	</div>
          	<div class="col-4">
			<h2>Car name</h2>
		</div>
		<div class="col-4">
			<h2>Current Price</h2>
		</div>
		<div class="col-2">
			&nbsp;
		</div>
          </div>

	<div id="cars">
		<% @cars.each do |car| %>
		    
			<div class="row row-border data-row">
				<div class="col-2 vert-center">
					<!-- seed miatt -->
					<% if car.picture.attached? %>
						<%= link_to image_tag(url_for(car.picture), class: "img-thumbnail top-space"), "#", data: {toggle: 'modal', target: '#Car'+car.id.to_s } %>
					<% else %>
						<%= link_to image_tag(car.image, class: "img-thumbnail top-space"), "#", data: {toggle: 'modal', target: '#Car'+car.id.to_s } %>		
					<% end %>
					
					
					
				</div>
				<div class="col-4 vert-center align-middle">
					<h2 class="data-column"><%= car.brand %> <%= car.model %></h2>
				</div>
				<div class="col-4 vert-center align-middle">
					<h2 class="data-column"><%= car.starting_price %>$</h2>
				</div>
				<div class="col-2 vert-center">
					<%= link_to "Bid", car, class: "btn btn-success btn-data-row" %>
				</div>
			</div>
			
			<div id="Car<%= car.id %>" class="modal fade" tabindex="-1" role="dialog">
				<div class="modal-dialog modal-width-fix">
					<div class="modal-content">
						<div class="modal-body">
						<!-- seed miatt -->
						<% if car.picture.attached? %>
							<%= image_tag url_for(car.picture), class: "img-fluid" %>
						<% else %>
							<%= image_tag car.image, class: "img-fluid" %>
						<% end %>
						</div>
					</div>
				</div>
			</div>
		    
  		<% end %>
	</div>

      </div>
    </div>	
	
</div>
